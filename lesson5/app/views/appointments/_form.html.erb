<%= simple_form_for @appointment do |f| %>
<%= f.association :patient, collection: @patients, label_method: :first_name, value_method: :id, label: "Patient", include_blank: false %>
<%= f.association :physician, collection: @physicians, label_method: :first_name, value_method: :id, label: "Physician", include_blank: false %>
<%= f.input :appointment_date %><br>
<%= f.button :submit, class: "btn btn-info" %>
<% end %>
