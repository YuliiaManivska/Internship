<div class = "row m-4">
  <h2>Edit appointment</h2>
  <%= form_for :appointment, url: appointment_path(@appointment), method: :patch do |f| %>
    <p>
      Physician:
      <%= f.number_field :physician_id %>
    </p>
    <p>
      Patient:
      <%= f.number_field :patient_id %>
    </p>
    <p>
      Appointment date:
      <%= f.datetime_field :appointment_date %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
