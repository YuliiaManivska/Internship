<div class="row justify-content-center">
  <div class="col-8">
    <div class="card">
      <div class="card-header">
        <div class="row m-4">
          <h2>Create new appointment</h2>
          <%= simple_form_for @appointment do |f| %>
          <%= f.collection_select :physician_id, @physicians, :id, :first_name %>
          <%= f.collection_select :patient_id, @patients, :id, :first_name %>
          <%= f.input :appointment_date %>
          <%= f.button :submit %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


