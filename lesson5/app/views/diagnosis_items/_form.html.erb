<%= simple_form_for @diagnosis_item do |f| %>
<%= f.input :content %>
<%= f.association :physician, collection: @physicians, label_method: :first_name, value_method: :id, label: "Physician", include_blank: false %>
<%= f.association :patient, collection: @patients, label_method: :first_name, value_method: :id, label: "Patient", include_blank: false %><br>
<%= f.button :submit, class: "btn btn-info" %>
<% end %>
