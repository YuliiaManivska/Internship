<div class="row justify-content-center">
  <div class="col-8">
    <div class="card">
      <div class="card-header">
        <div class="row m-4">
          <h2>Create new diagnosis item</h2>
          <%= form_for @diagnosis_item do |f| %>
            <p>
              Content:
              <%= f.text_area :content %>
            </p>
            <p>
              Physician:
              <%= f.collection_select :physician_id, @physicians, :id, :first_name %>
            </p>
            <p>
              Patient:
              <%= f.collection_select :patient_id, @patients, :id, :first_name %>
            </p>
            <p>
              <%= f.submit %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


