<div class="row justify-content-center">
  <div class="col-8">
    <div class="card">
      <div class="card-header">
        <div class="row m-4">
          <h2>Create new patient</h2>
          <%= form_for @patient do |f| %>
            <p>
              First Name
              <%= f.text_field :first_name %>
            </p>
            <p>
              Last Name
              <%= f.text_field :last_name %>
            </p>
            <p>
              Email
              <%= f.text_field :email %>
            </p>
            <p>
              Age
              <%= f.number_field :age %>
            </p>
            <p>
              <%= f.submit %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


