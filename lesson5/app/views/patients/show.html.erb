<div class="row justify-content-center">
  <div class="col-5">
    <div class="card">
      <div class="card-header">
      Patient â„– <%= @patient.id %>
      </div>
      <div class="card-body">
        <p>
        <%= @patient.first_name %>
        </p>
        <p>
        <%= @patient.last_name %>
        </p>
        <p>
        <%= @patient.email %>
        </p>
        <p>
        <%= @patient.age %>
        </p>
        <hr>
        <% if can? :update, @patient%>
          <%= link_to "Edit", edit_patient_path(@patient), class: "btn btn-warning" %>
        <% end %>

        <% if can? :destroy, @patient%>
          <%= link_to "Delete", patient_path(@patient), method: :delete, data:{confirm: "Do you want delete this post"}, class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
