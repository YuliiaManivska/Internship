<div class="row justify-content-center">
  <div class="col-5">
    <div class="card">
      <div class="card-header">
      physician â„– <%= @physician.id %>
      </div>
      <div class="card-body">
        <p>
        <%= @physician.first_name %>
        </p>
        <p>
        <%= @physician.last_name %>
        </p>
        <p>
        <%= @physician.phone_number %>
        </p>
        <p>
        <%= @physician.level %>
        </p>
        <hr>
        <% if can? :update, @physician%>
          <%= link_to "Edit", edit_physician_path(@physician), class: "btn btn-warning" %>
        <% end %>

        <% if can? :destroy, @physician%>
          <%= link_to "Delete", physician_path(@physician), method: :delete, data:{confirm: "Do you want delete this post"}, class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
